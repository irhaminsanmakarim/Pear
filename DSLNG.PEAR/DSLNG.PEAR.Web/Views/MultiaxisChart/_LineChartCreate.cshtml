@model DSLNG.PEAR.Web.ViewModels.Artifact.ArtifactDesignerViewModel

<div class="form-group form-list">
    <label class="col-sm-4 control-label">Series</label>
    <div class="col-sm-8">
        <input type="button" value="Add Series" class="button button-action button-super-tny" id="add-series" />
    </div>
</div>

<div class="hidden-fields">
    <div class="series-template original second-child-artifact-box form-horizontal">
        <h5 class="page-title text-inline">Series</h5>
        <input type="button" value="Remove" class="remove button button-super-tny button-danger pull-right" />
        <hr class="just-margin-bottom"/>

        <div class="clearfix">
            <div class="col-sm-6">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Label, new { @class = "col-sm-4 control-label"})
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Label, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Label)
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Color, new { @class = "col-sm-4 control-label"})
                    <div class="col-sm-8">
                        <div class="input-group colorpicker">
                            @Html.TextBoxFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Color, new { @class = "form-control" })
                            <span class="input-group-addon"><i></i></span>
                        </div>
                        @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].Color)
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-list">
                    @Html.LabelFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId, new { @class = "col-sm-4 control-label"})
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId, new List<SelectListItem>(), new { @class = "kpi-list form-control", style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].KpiId)
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group value-axis form-list">
                    @Html.LabelFor(model => Model.MultiaxisChart.Charts[0].LineChart.Series[0].ValueAxis, new { @class = "col-sm-4 control-label"})
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].ValueAxis, Model.MultiaxisChart.Charts[0].LineChart.ValueAxes, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MultiaxisChart.Charts[0].LineChart.Series[0].ValueAxis)
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




