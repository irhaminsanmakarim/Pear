@model DSLNG.PEAR.Web.ViewModels.Artifact.AreaChartViewModel

<div class="form-group form-list">
    @Html.LabelFor(model => model.Series, new { @class = "col-sm-4 control-label"})
    <div class="col-sm-8">
        @Html.DropDownList("seriesType", Model.SeriesTypes, new { id = "seriesType", @class = "form-control series-type" })
        <input type="button" value="Add Series" class="button button-action button-super-tny margin-top-1rem" id="add-series" />
    </div>
</div>

<div class="hidden-fields">
    @for (var i = 0; i < Model.Series.Count; i++)
    {
        var original = i == 0 ? "original" : "";
        var dataSeriesPos = original == "" ? "data-series-pos=" + i : "";
        <div class="series-template @original second-child-artifact-box form-horizontal" @dataSeriesPos>
            <input type="hidden" name="MultiaxisChart.Charts[@ViewData["ChartIndex"]].AreaChart.Series.Index" value="@i" />
            <h5 class="page-title text-inline">Series</h5>
            <input type="button" value="Remove" class="remove button button-super-tny button-danger pull-right" />
            <hr class="just-margin-bottom"/>

            <div class="clearfix">
                <div class="col-sm-6">
                    <div class="form-group form-list">
                        @Html.LabelFor(model => model.Series[i].Label, new { @class = "col-sm-4 control-label"})
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Series[i].Label, new
                       {
                           @class = "form-control",
                           @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].Label",
                           id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__Label"
                       })
                            @Html.ValidationMessageFor(model => model.Series[i].Label)
                        </div>
                    </div>
                </div>
                <div class="series-details-holder">
                    <div class="col-sm-6">
                        <div class="form-group form-list">
                            @Html.LabelFor(model => model.Series[i].Color, new { @class = "col-sm-4 control-label"})
                            <div class="col-sm-8">
                                <div class="input-group colorpicker">
                                    @Html.TextBoxFor(model => model.Series[i].Color, new
                               {
                                   @class = "form-control",
                                   @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].Color",
                                   id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__Color"
                               })
                                    <span class="input-group-addon"><i style="background-color:@Model.Series[i].Color"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.Series[i].Color)
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-list">
                            @Html.LabelFor(model => model.Series[i].KpiId, new { @class = "col-sm-4 control-label"})
                            <div class="col-sm-8">
                                @Html.DropDownListFor(model => model.Series[i].KpiId, new List<SelectListItem> { new SelectListItem { Value = Model.Series[i].KpiId.ToString(), Text = Model.Series[i].KpiName } }, new
                           {
                               @class = "kpi-list form-control",
                               style = "width:180px",
                               @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].KpiId",
                               id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__KpiId"
                           })
                                @Html.ValidationMessageFor(model => model.Series[i].KpiId)
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        @{
        if (i != 0)
        {
            Model.ValueAxes.Where(x => x.Value == Model.Series[i].ValueAxis).First().Selected = true;
        }
                        }
                        <div class="form-group value-axis form-list">
                            @Html.LabelFor(model => Model.Series[i].ValueAxis, new { @class = "col-sm-4 control-label"})
                            <div class="col-sm-8">
                                @Html.DropDownListFor(model => model.Series[i].ValueAxis, Model.ValueAxes, new
                           {
                               @class = "form-control",
                               @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].ValueAxis",
                               id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__ValueAxis"
                           })
                                @Html.ValidationMessageFor(model => model.Series[i].ValueAxis)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="stacks-holder">
                <label>&nbsp;</label>
                <input type="button" value="Add Stack" class="button button-action button-super-tny add-stack" />
                @for (var j = 0; j < Model.Series[i].Stacks.Count; j++)
                { 
                    <fieldset class="stack-template  @original third-child-artifact-box form-inline">
                        <input type="hidden" name="MultiaxisChart.Charts[@ViewData["ChartIndex"]].AreaChart.Series[@i].Stacks.Index" value="@j" />
                        <h5 class="page-title text-inline">Stack</h5>
                        <input type="button" value="Remove" class="remove button button-super-tny button-danger pull-right" />
                        <hr class="just-margin-bottom"/>
                        <div class="clearfix">
                            <div class="form-group form-list">
                                @Html.LabelFor(model => model.Series[i].Stacks[j].Label)
                                @Html.TextBoxFor(model => model.Series[i].Stacks[j].Label, new
                            {
                                @class = "form-control",
                                @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].Stacks[" + j + "].Label",
                                id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__Stacks_" + j + "__Label"
                            })
                                @Html.ValidationMessageFor(model => model.Series[i].Stacks[j].Label)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Series[i].Stacks[j].KpiId)
                                @Html.DropDownListFor(model => model.Series[i].Stacks[j].KpiId, new List<SelectListItem> { new SelectListItem { Value = Model.Series[i].Stacks[j].KpiId.ToString(), Text = Model.Series[i].Stacks[j].KpiName } },
                                new
                                {
                                    @class = "kpi-list  form-control",
                                    style = "width:180px",
                                    @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].Stacks[" + j + "].KpiId",
                                    id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__Stacks_" + j + "__KpiId"
                                })
                                @Html.ValidationMessageFor(model => model.Series[i].Stacks[j].KpiId)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Series[i].Stacks[j].Color)
                                <div class="input-group colorpicker">
                                    @Html.TextBoxFor(model => model.Series[i].Stacks[j].Color, new
                                {
                                    @class = "form-control",
                                    @Name = "MultiaxisChart.Charts[" + @ViewData["ChartIndex"] + "].AreaChart.Series[" + i + "].Stacks[" + j + "].Color",
                                    id = "MultiaxisChart_Charts_" + @ViewData["ChartIndex"] + "__AreaChart_Series_" + i + "__Stacks_" + j + "__Color"
                                })
                                    <span class="input-group-addon"><i style="background-color:@Model.Series[i].Stacks[j].Color"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.Series[i].Stacks[j].Color)
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    }

</div>





