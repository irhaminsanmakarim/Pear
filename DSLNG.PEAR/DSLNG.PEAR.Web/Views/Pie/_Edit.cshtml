@model DSLNG.PEAR.Web.ViewModels.Artifact.ArtifactDesignerViewModel

<div class="form-group form-list">
    @Html.LabelFor(model => model.Is3D, new { @class = "col-sm-4 control-label"})
    <div class="col-sm-8">
        @Html.CheckBoxFor(model => model.Is3D, new { @class = "checkbox-input" })
        @Html.ValidationMessageFor(model => model.Is3D)
    </div>
</div>

<div class="form-group form-list">
    @Html.LabelFor(model => model.ShowLegend, new { @class = "col-sm-4 control-label"})
    <div class="col-sm-8">
        @Html.CheckBoxFor(model => model.ShowLegend, new { @class = "checkbox-input" })
        @Html.ValidationMessageFor(model => model.ShowLegend)
    </div>
</div>

<div class="form-group form-list">
    <label class="col-sm-4 control-label">Series</label>
    <div class="col-sm-4">
        <input type="button" value="Add Series" class="button button-action button-tny" id="add-series" />
    </div>
</div>

