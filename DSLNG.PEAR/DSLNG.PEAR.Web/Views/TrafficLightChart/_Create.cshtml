@model DSLNG.PEAR.Web.ViewModels.Artifact.ArtifactDesignerViewModel

<div class="form-group">
    @Html.LabelFor(model => model.TrafficLightChart.Series.Label, new { @class = "col-sm-4 control-label"})
    <div class="col-sm-8">
        @Html.TextBoxFor(model => model.TrafficLightChart.Series.Label,new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TrafficLightChart.Series.Label)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TrafficLightChart.Series.KpiId, new { @class = "col-sm-4 control-label"})
    <div class="col-sm-8">
        @Html.DropDownListFor(model => model.TrafficLightChart.Series.KpiId, new List<SelectListItem>(), new { @class = "kpi-list form-control", style = "width:100%" })
        @Html.ValidationMessageFor(model => model.TrafficLightChart.Series.KpiId)
        <input type="button" value="Add Plot Bands" class="button button-action button-tny margin-top-1rem" id="add-plot" />
    </div>
</div>


@*<div id="plot-bands-holder">
</div>*@
<div id="hidden-fields">
    @for (var i = 0; i < Model.TrafficLightChart.PlotBands.Count; i++)
    {
        <div class="plot-band-template original container-box form-horizontal form-artifact">
            <h4 class="page-title text-inline">Plot Bands</h4>
            <input type="button" value="Remove" class="remove button button-tny button-danger pull-right" />
            <hr class="just-margin-bottom"/>

            <div class="clearfix">
                <div class="col-sm-6">
                  <div class="form-group">
                      @Html.LabelFor(model => model.TrafficLightChart.PlotBands[i].Label, new { @class = "col-sm-4 control-label"})
                      <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.TrafficLightChart.PlotBands[i].Label,new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TrafficLightChart.PlotBands[i].Label)
                      </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                      @Html.LabelFor(model => model.TrafficLightChart.PlotBands[i].Color, new { @class = "col-sm-4 control-label"})
                      <div class="col-sm-8">
                        <div class="input-group colorpicker">
                            @Html.TextBoxFor(model => model.TrafficLightChart.PlotBands[i].Color, new { @class = "form-control" })
                            <span class="input-group-addon"><i></i></span>
                        </div>
                        @Html.ValidationMessageFor(model => model.TrafficLightChart.PlotBands[i].Color)
                      </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                      @Html.LabelFor(model => model.TrafficLightChart.PlotBands[i].From, new { @class = "col-sm-4 control-label"})
                      <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.TrafficLightChart.PlotBands[i].From, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TrafficLightChart.PlotBands[i].From)
                      </div>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                      @Html.LabelFor(model => model.TrafficLightChart.PlotBands[i].To, new { @class = "col-sm-4 control-label"})
                      <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.TrafficLightChart.PlotBands[i].To,new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TrafficLightChart.PlotBands[i].To)
                      </div>
                  </div>
                </div>                
            </div>
        </div>
    }
</div>
